                    </Grid>

                    <TabControl Grid.Row="1" 
                                Grid.Column="2"
                                Margin="5"
                                FontSize="16">
                        <TabItem Header="Prerequisites">
                            <Grid Background="#FFE5E5E5" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid DockPanel.Dock="Top"
                                          CanUserAddRows="False"
                                          AutoGenerateColumns="False"
                                          SelectionMode="Single"
                                          SelectionUnit="FullRow"
                                          Background="#eceff1" 
                                          ItemsSource="{Binding Path=CoursePrerequisites}"
                                          SelectedItem="{Binding Path=SelectedPrerequisite}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Qualification" Binding="{Binding Path = Qualification}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Grid.Row="1"
                                            Orientation="Horizontal"
                                            Margin="5,10">
                                    <Button Content="Add Prerequisite" 
                                            Width="150" 
                                            FontSize="14"
                                            Margin="20,0,30,0" 
                                            Click="DisplayQualificationPopUp"/>
                                    <Button Content="Remove" 
                                            Width="90" 
                                            FontSize="14"
                                            Margin="0,0" 
                                            Click="RemoveCoursePrerequisite"/>
                                </StackPanel>

                                <Popup x:Name="CoursePrerequisitePopup"
                                       Style="{StaticResource PopupStyle}">

                                    <Border BorderThickness="3" 
                                            BorderBrush="White">
                                        <Grid Background="#cfd8dc">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Label Grid.Row="0"
                                               Content="Qualifications List"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"/>

                                        <ListBox Margin="0,5"
                                                 Grid.Row="2"
                                                 ItemsSource="{Binding Path=QualificationList}"
                                                 SelectedItem="{Binding Path=SelectedQualification}"
                                                 HorizontalContentAlignment="Stretch">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="1" BorderBrush="DarkSlateGray" BorderThickness="1">
                                                        <StackPanel Margin="1">
                                                            <TextBlock FontSize="14" Text="{Binding Path=QualificationCode}"/>
                                                            <TextBlock FontSize="11" Text="{Binding Path=QualificationId}"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                        <DockPanel LastChildFill="False" 
                                                   Margin="30,0"
                                                   Grid.Row="3">
                                            <Button Content="Cancel" 
                                                    DockPanel.Dock="Right"
                                                    Click="CancelCoursePrerequisite"/>
                                            <Button Content="Add" 
                                                    DockPanel.Dock="Left" 
                                                    Click="AddCoursePrerequisite"/>
                                        </DockPanel>
                                    </Grid>

                                    </Border>

                                </Popup>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Training Session">
                            <Grid Background="#FFE5E5E5" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid DockPanel.Dock="Top"
                                          CanUserAddRows="False"
                                          AutoGenerateColumns="False"
                                          SelectionMode="Single"
                                          SelectionUnit="FullRow"
                                          Background="#eceff1" 
                                          ItemsSource="{Binding Path=CourseTrainingSessions}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Session ID" Binding="{Binding Path = SessionId}"/>
                                        <DataGridTextColumn Header="Fee" Binding="{Binding Path = Fee}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <TabItem Header="Training Session"
                     x:Name="SessionTab"
                     Visibility="Collapsed">
                <Grid Background="#cfd8dc">
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".4*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0"
                          Grid.Row="0"
                          Grid.RowSpan="2"
                          Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               Content="Training Sessions"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                        <TextBox DockPanel.Dock="Left"
                                 Grid.Row="2"
                                 FontSize="18"
                                 materialDesign:HintAssist.Hint="search training sessions. . ."
                                 Text="{Binding Path=SearchText, Delay=500, UpdateSourceTrigger=PropertyChanged}"/>

                        <ListBox Margin="0,5"
                                 Grid.Row="3"
                                 ItemsSource="{Binding Path=SessionList}"
                                 SelectedItem="{Binding Path=SelectedTrainingSession}"
                                 HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="1" BorderBrush="DarkSlateGray" BorderThickness="1">
                                        <StackPanel Margin="1">
                                            <TextBlock FontSize="16" Text="{Binding Path=CourseName}"/>
                                            <TextBlock FontSize="12" Text="{Binding Path=SessionId}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </Grid>

                    <Grid Grid.Column="2" Grid.Row="0" Margin="5"
                          DataContext="{Binding Path=SelectedTrainingSession}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DockPanel LastChildFill="False" 
                                   Margin="0,0,5,0"
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="3">

                            <Button Content="Add" 
                                    DockPanel.Dock="Left" 
                                    Click="BtnAddSession"/>
                            <Button Content="Edit"
                                    DockPanel.Dock="Left" 
                                    Margin="30,0"
                                    Click="BtnEditSession"/>
                            <Button Content="Remove" 
                                    DockPanel.Dock="Right"
                                    Click="BtnRemoveSession"/>
                        </DockPanel>


                        <Label Grid.Row="1" Grid.Column="0"
                               Content="ID"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   VerticalAlignment="Center" 
                                   Margin="5" 
                                   Background="#eceff1"
                                   Text="{Binding Path=SessionId}"/>

                        <Label Grid.Row="1" Grid.Column="2"
                               Content="Course"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="1" Grid.Column="3"
                                   VerticalAlignment="Center" 
                                   Margin="5" 
                                   Background="#eceff1"
                                   Text="{Binding Path=CourseName}"/>


                        <Label Grid.Row="2" Grid.Column="0"
                               Content="Fee"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                   VerticalAlignment="Center" 
                                   Margin="5" 
                                   Background="#eceff1"
                                   Text="{Binding Path=Fee}"/>

                        <Label Grid.Row="2" Grid.Column="2"
                               Content="Capacity"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="2" Grid.Column="3"
                                   VerticalAlignment="Center" 
                                   Margin="5" 
                                   Background="#eceff1"
                                   Text="{Binding Path=Capacity}"/>


                    </Grid>

                    <TabControl Grid.Row="1" 
                                Grid.Column="2" 
                                Margin="5"
                                FontSize="16">
                        <TabItem Header="Enrolled Candidate" >
                            <Grid Background="#eceff1">
                                <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <DataGrid Grid.Row="0"
                                      CanUserAddRows="False"
                                      AutoGenerateColumns="False"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow"
                                      Background="#eceff1" 
                                      ItemsSource="{Binding Path=RegisteredCandidates}"
                                      SelectedItem="{Binding Path=SelectedRegistration}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Registration ID" Binding="{Binding Path = RegistrationId}"/>
                                        <DataGridTextColumn Header="Candidate" Binding="{Binding Path = CandidateName}"/>
                                        <DataGridTextColumn Header="Registration Date" Binding="{Binding Path = RegistrationDate}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Grid.Row="1"
                                        Orientation="Horizontal"
                                        Margin="5,10,5,10" Grid.ColumnSpan="2">
                                    <Button Content="Add" 
                                        Margin="20,0,30,0" 
                                        Click="BtnCandidatePopUp"/>
                                    <Button Content="Drop" 
                                        Click="BtnDropCandidate"/>
                                </StackPanel>

                                <Popup x:Name="CandidatePopUp"
                                       Style="{StaticResource PopupStyle}">
                                    <Border BorderThickness="3" 
                                            BorderBrush="White">

                                        <Grid Background="#cfd8dc">

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                        <Label HorizontalAlignment="Center"
                                               Content="Candidate List"
                                               Grid.Row="0"
                                               FontSize="18"/>

                                        <TextBox DockPanel.Dock="Left"
                                                 Grid.Row="1"
                                                 FontSize="18"
                                                 Margin="10,0"
                                                 materialDesign:HintAssist.Hint="search candidate. . ."
                                                 Text="{Binding Path=SearchCandidateString, Delay=500, UpdateSourceTrigger=PropertyChanged}"/>


                                        <ListBox Margin="0,5"
                                                 Grid.Row="2"
                                                 ItemsSource="{Binding Path=CandidateList}"
                                                 SelectedItem="{Binding Path=SelectedCandidate}"
                                                 HorizontalContentAlignment="Stretch">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="1" BorderBrush="DarkSlateGray" BorderThickness="1">
                                                        <StackPanel Margin="1">
                                                            <TextBlock FontSize="14" Text="{Binding Path=CandidateFullName}"/>
                                                            <TextBlock FontSize="12" Text="{Binding Path=CandidateNumber}"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                        <DockPanel LastChildFill="False" 
                                                   Margin="30,10"
                                                   Grid.Row="3">
                                            <Button Content="Cancel" 
                                                    DockPanel.Dock="Right"
                                                    Width="75"
                                                    FontSize="14"
                                                    Click="BtnCancelRegistration"/>
                                            <Button Content="Enroll" 
                                                    DockPanel.Dock="Left" 
                                                    Width="75"
                                                    FontSize="14" 
                                                    Click="BtnEnrollCandidate"/>
                                        </DockPanel>


                                    </Grid>
                                    </Border>
                                </Popup>


                            </Grid>
                        </TabItem>
                        <TabItem Header="Schedules">
                            <Grid Background="#eceff1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <DataGrid Grid.Row="0"
                                          CanUserAddRows="False"
                                          AutoGenerateColumns="False"
                                          SelectionMode="Single"
                                          SelectionUnit="FullRow"
                                          Background="#eceff1" 
                                          ItemsSource="{Binding Path=SessionSchedules}"
                                          SelectedItem="{Binding Path=SelectedSchedule}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Day" Binding="{Binding Path = Day}"/>
                                        <DataGridTextColumn Header="Start Time" Binding="{Binding Path = StartTime}"/>
                                        <DataGridTextColumn Header="End Time" Binding="{Binding Path = EndTime}"/>
                                        <DataGridTextColumn Header="Duration" Binding="{Binding Path = Duration}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <DockPanel Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Width="400"
                                            Margin="20,5"
                                            HorizontalAlignment="Left"
                                            LastChildFill="False" >
                                    <Button DockPanel.Dock="Left"
                                            Content="Add" 
                                            Margin="0,0,20,0" 
                                            Click="BtnAddSchedule"/>
                                    <Button DockPanel.Dock="Left"
                                            Content="Edit" 
                                            Margin="0,0,20,0" 
                                            Click="BtnEditSchedule"/>

                                    <Button DockPanel.Dock="Right"
                                            Content="Remove" 
                                            Margin="0,0"
                                            Click="BtnDeleteSession"/>
                                </DockPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>

                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
